generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  category_id   Int       @id @default(autoincrement())
  category_name String    @unique
  products      Product[]
}

model Brand {
  brand_id   Int       @id @default(autoincrement())
  brand_name String    @unique
  products   Product[]
}

model Product {
  product_id     Int           @id @default(autoincrement())
  product_code   String        @unique
  product_type   String        @unique
  category_id    Int
  brand_id       Int
  unit           String?
  purchase_price Float?
  selling_price  Float?
  description    String?
  category       Category      @relation(fields: [category_id], references: [category_id])
  brand          Brand         @relation(fields: [brand_id], references: [brand_id])
  stock          Stock[]
  transaction    Transaction[]
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt
}

model Stock {
  stock_id      Int      @id @default(autoincrement())
  product_code  String   @unique
  stock         String?
  serial_number String?
  product       Product  @relation(fields: [product_code], references: [product_code])
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

enum TransactionType {
  IN
  OUT
}

model Transaction {
  transaction_id   Int             @id @default(autoincrement())
  product_id       Int
  supplier_id      Int?
  customer_id      Int?
  serial_number    String?
  quantity         Int
  transaction_type TransactionType
  product          Product         @relation(fields: [product_id], references: [product_id])
  supplier         Suplier?        @relation(fields: [supplier_id], references: [supplier_id])
  customer         Customer?       @relation(fields: [customer_id], references: [customer_id])
  created_at       DateTime        @default(now())
}

model Suplier {
  supplier_id      Int           @id @default(autoincrement())
  supplier_name    String?
  supplier_phone   String?
  supplier_email   String?
  supplier_address String?
  created_at       DateTime      @default(now())
  updated_at       DateTime      @updatedAt
  transaction      Transaction[]
}

model Customer {
  customer_id      Int           @id @default(autoincrement())
  customer_name    String?
  customer_phone   String?
  customer_email   String?
  customer_address String?
  created_at       DateTime      @default(now())
  updated_at       DateTime      @updatedAt
  transaction      Transaction[]
}
